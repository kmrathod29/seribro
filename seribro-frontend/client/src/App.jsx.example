import React from 'react';
import { BrowserRouter as Router, Routes, Route } from 'react-router-dom';

// Import payment pages
import StudentPaymentPage from '@/pages/StudentPaymentPage';
import AdminPaymentPage from '@/pages/AdminPaymentPage';
import PaymentVerificationPage from '@/pages/PaymentVerificationPage';
import RatingPage from '@/pages/RatingPage';
import PaymentWorkflowPage from '@/pages/PaymentWorkflowPage';

// Import other existing pages
import Login from '@/pages/Login';
import Dashboard from '@/pages/Dashboard';
import ProjectDetails from '@/pages/ProjectDetails';
import AdminDashboard from '@/pages/AdminDashboard';
import ProtectedRoute from '@/components/ProtectedRoute';

// ============================================
// ADD THESE ROUTES TO YOUR ROUTES CONFIGURATION
// ============================================

const paymentRoutes = [
  // Student: View earnings and payment history
  {
    path: '/student/payments',
    element: (
      <ProtectedRoute requiredRole="student">
        <StudentPaymentPage />
      </ProtectedRoute>
    ),
    name: 'Student Payments'
  },

  // Admin: Manage and release payments
  {
    path: '/admin/payments',
    element: (
      <ProtectedRoute requiredRole="admin">
        <AdminPaymentPage />
      </ProtectedRoute>
    ),
    name: 'Admin Payments'
  },

  // Company: Verify Razorpay payments
  {
    path: '/payments/verify',
    element: (
      <ProtectedRoute requiredRole="company">
        <PaymentVerificationPage />
      </ProtectedRoute>
    ),
    name: 'Verify Payment'
  },

  // Student: Rate project after payment
  {
    path: '/workspace/projects/:projectId/rating',
    element: (
      <ProtectedRoute requiredRole="student">
        <RatingPage />
      </ProtectedRoute>
    ),
    name: 'Rate Project'
  },

  // Public: Payment workflow visualization
  {
    path: '/workflow/payments',
    element: <PaymentWorkflowPage />,
    name: 'Payment Workflow'
  }
];

// ============================================
// COMPLETE APP COMPONENT EXAMPLE
// ============================================

function App() {
  return (
    <Router>
      <Routes>
        {/* Authentication Routes */}
        <Route path="/login" element={<Login />} />

        {/* Dashboard Routes */}
        <Route 
          path="/dashboard" 
          element={
            <ProtectedRoute>
              <Dashboard />
            </ProtectedRoute>
          } 
        />

        <Route 
          path="/admin" 
          element={
            <ProtectedRoute requiredRole="admin">
              <AdminDashboard />
            </ProtectedRoute>
          } 
        />

        {/* Project Routes */}
        <Route 
          path="/workspace/projects/:projectId" 
          element={
            <ProtectedRoute>
              <ProjectDetails />
            </ProtectedRoute>
          } 
        />

        {/* ===== PAYMENT ROUTES START ===== */}
        {/* Student Payment History */}
        <Route 
          path="/student/payments" 
          element={
            <ProtectedRoute requiredRole="student">
              <StudentPaymentPage />
            </ProtectedRoute>
          } 
        />

        {/* Admin Payment Release */}
        <Route 
          path="/admin/payments" 
          element={
            <ProtectedRoute requiredRole="admin">
              <AdminPaymentPage />
            </ProtectedRoute>
          } 
        />

        {/* Payment Verification */}
        <Route 
          path="/payments/verify" 
          element={
            <ProtectedRoute requiredRole="company">
              <PaymentVerificationPage />
            </ProtectedRoute>
          } 
        />

        {/* Project Rating */}
        <Route 
          path="/workspace/projects/:projectId/rating" 
          element={
            <ProtectedRoute requiredRole="student">
              <RatingPage />
            </ProtectedRoute>
          } 
        />

        {/* Payment Workflow */}
        <Route 
          path="/workflow/payments" 
          element={<PaymentWorkflowPage />} 
        />
        {/* ===== PAYMENT ROUTES END ===== */}

        {/* 404 Route */}
        <Route path="*" element={<NotFound />} />
      </Routes>
    </Router>
  );
}

export default App;

